{% extends 'base.html.twig' %}

{% block title %}{{ ((deleted_list is defined and deleted_list == true) ? 'client.index_deleted' : 'client.index')|trans }}{% endblock %}

{% block body %}
    <div class="pagetitle d-flex justify-content-between">
        <h1>{{ ((deleted_list is defined and deleted_list == true) ? 'client.index_deleted' : 'client.index')|trans }}</h1>

        {% if is_granted('ROLE_USER') and not is_granted('ROLE_COMPANY_ADMIN') and not is_granted('ROLE_WEBSITE_ADMIN') %}
            <a href="{{ path('app_client_new') }}" class="btn btn-primary">
                {{ 'client.new'|trans }}
            </a>
        {% else %}
            <div class="btn-group" role="group">
                <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false">
                    {{ 'button.manage'|trans }}
                </button>
                <ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                    <li><a href="{{ path('app_client_new') }}" class="dropdown-item">
                            {{ 'client.new'|trans }}
                        </a></li>
                    {% if is_granted(constant('App\\Entity\\User::ROLE_WEBSITE_ADMIN')) %}
                        <li><a href="{{ path('app_log_client_index') }}" class="dropdown-item">Logs</a></li>
                    {% endif %}
                    {% if is_granted(constant('App\\Entity\\User::ROLE_COMPANY_ADMIN')) %}
                        {% if deleted_list is defined and deleted_list == true %}
                            <li><a href="{{ path('app_client_index') }}" class="dropdown-item">
                                    {{ 'button.show_active'|trans }}
                                </a></li>
                        {% else %}
                            <li><a href="{{ path('app_client_deleted_index') }}" class="dropdown-item">
                                    {{ 'button.show_deleted'|trans }}
                                </a></li>
                        {% endif %}
                    {% endif %}
                </ul>
            </div>
        {% endif %}
    </div>
    <section class="section">
        <div class="card p-4">
            <div class="card-body">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                    <tr class="table-primary">
                        <th scope="col" class="d-none d-md-table-cell">{{ 'client.civility.label'|trans }}</th>
                        <th scope="col">{{ 'client.name.label'|trans }}</th>
                        <th scope="col">{{ 'client.first_name.label'|trans }}</th>
                        <th scope="col" class="d-none d-md-table-cell">{{ 'client.birthdate.label'|trans }}</th>
                        <th scope="col" class="d-none d-md-table-cell">{{ 'head.action'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for client in clients %}
                        <tr data-controller="table-row"
                            data-table-row-url-value="{{ path('app_client_show', {'id': client.id}) }}"
                            data-action="click->table-row#navigate"
                            class="{{ cycle(['', 'table-light'], loop.index0) }}">
                            <td class="text-start d-none d-md-table-cell">{{ client.civility|trans }}</td>
                            <td class="text-start">{{ client.lastName }}</td>
                            <td class="text-start">{{ client.firstName }}</td>
                            <td class="text-start d-none d-md-table-cell">{{ client.dbirthdate ? client.dbirthdate|date('d-m-Y') : '' }}</td>
                            <td class="text-end d-none d-md-table-cell">
                                {% if deleted_list is defined and deleted_list == true %}
                                    <a href="{{ path('app_client_deleted_show', {'id': client.id}) }}" class="btn btn-primary">{{ 'button.show'|trans }}</a>
                                {% else %}
                                    <a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn btn-primary">{{ 'button.show'|trans }}</a>
                                    <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-primary">{{ 'button.edit'|trans }}</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center">{{ 'no_record'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="navigation mt-4 d-flex justify-content-center">
                    {{ knp_pagination_render(clients) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
