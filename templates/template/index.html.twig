{% extends 'base.html.twig' %}

{% block title %}
    {{ "template.index"|trans }}
{% endblock %}

{% block body %}
    <div class="pagetitle d-flex justify-content-between">
        <h1>{{ "template.index"|trans }}</h1>
        <a href="{{ path('app_template_new') }}" class="btn btn-primary">
            {{ "template.new"|trans }}
        </a>
    </div>
    <section class="section">
        <div class="card p-4">
            <div class="card-body">
                <table class="table">
                    <thead>
                    <tr class="table-primary">
                        <th scope="col"
                            class="px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ "template.name.label"|trans }}</th>
                        <th scope="col"
                            class="px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ "client_document.type.label"|trans }}</th>
                        <th scope="col"
                            class="px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ "head.action"|trans }}</th>
                    </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                    {% for template in templates %}
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">{{ template.name }}</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">{{ template.type|trans_enum }}</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">
                                    <a href="{{ path('app_template_show', {'id': template.id}) }}">{{ "template.show"|trans }}</a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">{{ "no_record"|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}
