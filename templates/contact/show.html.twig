{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}
	<section class="section profile">
		<div class="row">
			<div class="col-xl-4">

				<div class="card">
					<div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
						<h2>{{ entity }}</h2>
						<h3>{{ entity.position }}</h3>
						<div class="social-links mt-2">
							{{ entity.email }}
						</div>
					</div>
				</div>

			</div>

			<div class="col-xl-8">

				<div class="card">
					<div class="card-body pt-3">
						<div class="pagetitle d-flex justify-content-between">
							<h1>{{ "customer.contacts"|trans }}</h1>
						</div>
						<div class="tab-pane fade show active profile-overview" id="profile-overview" role="tabpanel">
							<h5 class="card-title">Contact</h5>

							<p>Téléphone fixe : {{ entity.phone }}</p>
							<p>Téléphone mobile :{{ entity.mobilePhone }}</p>
							<p>Adresse : {{ entity.address }}</p>
						</div>

					</div>

				</div>

			</div>
				<div class="divFlexs">
					<twig:Button
							link="{{ path('app_contact_index') }}"
							theme="secondary"
							label="button.back"
							icon="arrow-left"
					/>
					<twig:Button
							link="{{ path('app_contact_edit', {'id': entity.id}) }}"
							theme="primary"
							icon="pencil-square"
							label="button.edit"
					/>
					{{ component('DeleteButton', {
						deleteRoute: "app_contact_delete",
						deleteRouteParams: {id: entity.id},
						entityId: entity.id,
						showLabel: true
					}) }}


		</div>
	</div>
</section>{% endblock %}
