{% extends 'base.html.twig' %}

{% block title %}{{ contact.firstName }} {{ contact.lastName }}{% endblock %}

{% block body %}
<div class="pagetitle">
    <h1>Contact Details</h1>
</div>

<div class="container mt-4">
    <div class="card shadow-sm">
        <!-- Card Header -->
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-person-lines-fill"></i> {{ contact.firstName }} {{ contact.lastName }}</h5>
            <a href="{{ path('app_contact_index') }}" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>

        <!-- Card Body -->
        <div class="card-body">
            <!-- Personal Information Section -->
            <h6 class="bold mb-3"><i class="bi bi-person-fill"></i> Personal Information</h6>
            <table class="table table-borderless mb-4">
                <tbody>
                    <tr>
                        <th class="text-muted">First Name</th>
                        <td>{{ contact.firstName }}</td>
                    </tr>
                    <tr>
                        <th class="text-muted">Last Name</th>
                        <td>{{ contact.lastName }}</td>
                    </tr>
                    <tr>
                        <th class="text-muted">Position</th>
                        <td>{{ contact.position ?: 'N/A' }}</td>
                    </tr>
                </tbody>
            </table>
            <hr>

            <!-- Contact Information Section -->
            <h6 class=" mb-3"><i class="bi bi-envelope-fill"></i> Contact Information</h6>
            <table class="table table-borderless mb-4">
                <tbody>
                    <tr>
                        <th class="text-muted">Email</th>
                        <td>
                            {% if contact.email %}
                                <a href="mailto:{{ contact.email }}">{{ contact.email }}</a>
                            {% else %}
                                N/A
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th class="text-muted">Phone</th>
                        <td>{{ contact.phone ?: 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th class="text-muted">Mobile Phone</th>
                        <td>{{ contact.mobilePhone ?: 'N/A' }}</td>
                    </tr>
                </tbody>
            </table>
            <hr>

            <!-- Address Section -->
            <h6 class=" mb-3"><i class="bi bi-geo-alt-fill"></i> Address</h6>
            <p class="text-muted">{{ contact.address ?: 'N/A' }}</p>
            <hr>

            <!-- Customer Section -->
            <h6 class=" mb-3"><i class="bi bi-building"></i> Customer</h6>
            <p class="text-muted">
                {% if contact.customer %}
                    <a href="{{ path('app_customer_show', { id: contact.customer.id }) }}">{{ contact.customer.name }}</a>
                {% else %}
                    N/A
                {% endif %}
            </p>
        </div>

        <!-- Card Footer -->
        <div class="card-footer text-end">
            <a href="{{ path('app_contact_edit', { id: contact.id }) }}" class="btn btn-primary btn-sm">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            {{ component('DeleteButton', {
                deleteRoute: 'app_contact_delete',
                deleteRouteParams: { id: contact.id },
                entityId: contact.id,
                showLabel: true
            }) }}
        </div>
    </div>
</div>
{% endblock %}
