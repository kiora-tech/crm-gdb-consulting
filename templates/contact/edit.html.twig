{% extends 'base.html.twig' %}

{% block title %}Edit Contact
{% endblock %}

{% block body %}
	<div class="pagetitle d-flex justify-content-between">
		<h1>{{ "menu.contacts"|trans }}</h1>
	</div>
	<section class="section">
		<div class="card p-4">
			<div class="card-body">
				<turbo-frame id="contact">
					<div class="overlay" id="contact-overlay">
						<div class="overlay-content">
							{{ include('contact/_form.html.twig', {'button_label': 'Update'}) }}

						</turbo-frame>
						<div class="divFlexGap">
							{{ include('contact/_delete_form.html.twig') }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
