{% extends 'base.html.twig' %}

{% block title %}Contact index
{% endblock %}

{% block body %}
	<div class="pagetitle d-flex justify-content-between">
		<h1>{{ "menu.contacts"|trans }}</h1>
	</div>
	<section class="section">
		<div class="card p-4">
			<div class="card-body">
				<table class="table">
					<thead class="bg-gray-50">
						<tr class="table-primary">
							<th scope="col" class="px-6 py-4 text-center">Email</th>
							<th scope="col" class="px-6 py-4 text-center">{{ "name"|trans }}</th>
							<th scope="col" class="px-6 py-4 text-center">Position</th>
							<th scope="col" class="px-6 py-4 text-center">Phone</th>
							<th scope="col" class="px-6 py-4 text-center">Mobile Phone</th>
							<th scope="col" class="px-6 py-4 text-center">Address</th>
							<th scope="col" class="px-6 py-4 text-center" data-index="6">Actions</th>
						</tr>
					</thead>
					<tbody class="bg-white divide-y divide-gray-200">
						{% for contact in entities %}
							<tr id="contact-row-{{ contact.id }}">
								<td class="px-6 py-4 text-center">
									<a href="mailto:{{ contact.email }}" class="text-blue-500 hover:underline">{{ contact.email }}</a>
								</td>
								<td class="px-6 py-4 text-center">{{ contact.firstName }} {{ contact.lastName }}</td>
								<td class="px-6 py-4 text-center">{{ contact.position }}</td>
								<td class="px-6 py-4 text-center">
									<a href="tel:{{ contact.phone }}" class="text-blue-500 hover:underline">{{ contact.phone }}</a>
								</td>
								<td class="px-6 py-4 text-center">
									<a href="tel:{{ contact.mobilePhone }}" class="text-blue-500 hover:underline">{{ contact.mobilePhone }}</a>
								</td>
								<td class="px-6 py-4 text-center">{{ contact.address }}</td>
								<td class="buttonDisplay px-6 py-4 text-right">
									<a href="{{ path('app_contact_show', {'id': contact.id}) }}" class="btn btn-primary">{{ "button.show"|trans }}</a>
									<a href="{{ path('app_contact_edit', {'id': contact.id}) }}" class="btn btn-primary">{{ "button.edit"|trans }}</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="7" class="px-6 py-4 text-center">No records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</section>

	<a href="{{ path('app_contact_new') }}">Create new</a>
{% endblock %}
