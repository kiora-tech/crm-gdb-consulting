{% extends "simple_base.html.twig" %}

{% block inner_header %}
	{% if is_granted('ROLE_USER') %}

		<i class="toggle-sidebar-btn"><twig:ux:icon name="bi:list"/></i>

	{% endif %}

{% endblock %}

{% block header %}

	{{ parent() }}

	{% if is_granted('ROLE_USER') %}
		<aside
			id="sidebar" class="sidebar" data-turbo-frame="body">
			{{ include('_menu.html.twig') }}
			<div class="sidebar-footer mt-auto border-top py-2 px-3">
				<small class="text-muted">CRM-GDB v{{ app_version|default('dev') }}</small>
			</div>
		</aside>
	{% endif %}

{% endblock %}

{% block sidebar_footer %}
	{% if is_granted('ROLE_USER') %}
		<div class="sidebar-footer">
			<small class="text-muted">CRM-GDB v{{ app_version|default('dev') }}</small>
		</div>
	{% endif %}
{% endblock %}