{% extends 'base.html.twig' %}

{% block title %}
    {{ "menu.company"|trans }}
{% endblock %}

{% block body %}
    <div class="pagetitle">
        <h1>{{ "menu.company"|trans }}</h1>
    </div>
    <section class="section">
        <div class="card p-4">
            <div class="card-body">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>{{ "id"|trans }}</th>
                        <td>{{ company.id }}</td>
                    </tr>
                    <tr>
                        <th>{{ "name"|trans }}</th>
                        <td>{{ company.name }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="d-flex gap-2 flex-wrap">
                    <a class="btn btn-primary mt-4"
                       href="{{ path('app_company_edit', {'id': company.id}) }}">{{ "button.company.update"|trans }}</a>

                        <a class="btn btn-primary mt-4"
                           href="{{ path('app_user_company_index', {'id': company.id}) }}">{{ "button.company.users"|trans }}</a>

                </div>
            </div>
        </div>
    </section>
{% endblock %}
