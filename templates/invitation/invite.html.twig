{% extends 'base.html.twig' %}

{% block title %}{{ 'prospect.invite'|trans }}{% endblock %}

{% block body %}
    <div class="pagetitle">
        <h1>{{ 'prospect.invite'|trans }}</h1>
    </div>
    <section class="section">
        <div class="row">
            <div class="col-lg-6">
                <div class="card p-4">
                    <div class="card-body">
                        <h3>{{ 'prospect.invite'|trans }}</h3>
                        <p>{{ 'prospect.invitation_explanation'|trans }}</p>
                        <div>
                            {{ form_start(form) }}
                            <div class="space-y-6">
                                <div>
                                    <label for="email"
                                           class="block text-sm font-medium text-gray-700">{{ 'prospect.email'|trans }}</label>
                                    <div class="mt-1">
                                        {{ form_widget(form.email, { 'attr': { 'class': 'shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md' } }) }}
                                    </div>
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                            <div class="mt-6 flex justify-end mt-2">
                                <button type="submit" class="btn btn-primary">
                                    {{ 'prospect.send'|trans }}
                                </button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card p-4">
                    <div class="card-body" data-controller="prospect-stats" data-stats='{
                        "invitedCount": {{ invitedCount }},
                        "usedCount": {{ usedCount }},
                        "createdCount": {{ createdCount }},
                        "invitedLabel": "{{ 'prospect.invited'|trans }}",
                        "usedLabel": "{{ 'prospect.used'|trans }}",
                        "createdLabel": "{{ 'prospect.created'|trans }}"
                    }'>
                        <h3 class="text-lg font-medium leading-6 text-gray-900">{{ 'prospect.statistics'|trans }}</h3>
                        <div data-prospect-stats-target="chart" style="width: 100%; height: 400px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
