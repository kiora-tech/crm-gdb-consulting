<div class="col-md-6">
    <div class="card info-card sales-card">
        <div class="card-body">
            <h5 class="card-title">{{ "client.new"|trans }}</h5>
            <div class="d-flex align-items-center">
                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                    <i class="bi bi-people"></i>
                </div>
                <div class="ps-3">
                    <h6>{{ clientsThisMonth }}</h6>
                    {% if differencePercentage > 0 %}
                        <span class="text-success small pt-1 fw-bold">{{ differencePercentage|number_format(2) }}%</span>
                        <span class="text-muted small pt-2 ps-1">{{ "client_stats.increase"|trans }}</span>
                    {% elseif differencePercentage < 0 %}
                        <span class="text-danger small pt-1 fw-bold">{{ differencePercentage|number_format(2) }}%</span>
                        <span class="text-muted small pt-2 ps-1">{{ "client_stats.decrease"|trans }}</span>
                    {% else %}
                        <span class="text-muted small pt-2 ps-1">{{ "client_stats.stable"|trans }}</span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>