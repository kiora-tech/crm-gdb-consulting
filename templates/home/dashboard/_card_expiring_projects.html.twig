{# Projects with Upcoming Deadlines #}
<div class="card shadow-sm border-0">
    <!-- Dropdown Actions -->
    <div class="filter">
        <a class="icon text-muted" href="#" data-bs-toggle="dropdown">
            <i class="bi bi-three-dots"></i>
        </a>
        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
            <li class="dropdown-header text-start">
                <h6 class="mb-0">{{ 'dashboard.actions'|trans }}</h6>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('app_project_index') }}">
                    <i class="bi bi-eye me-2"></i>{{ 'dashboard.view_all_projects'|trans }}
                </a>
            </li>
        </ul>
    </div>

    <!-- Card Body -->
    <div class="card-body">
        <h5 class="card-title text-primary fw-bold">
            <i class="bi bi-calendar-event me-2"></i>{{ 'dashboard.projects_deadline_soon'|trans }}
        </h5>

        {% if upcomingDeadlineProjects|length > 0 %}
            <ul class="list-group list-group-flush mt-3">
                {% for project in upcomingDeadlineProjects %}
                    <li class="list-group-item d-flex align-items-start">
                        <i class="bi bi-calendar-event text-primary me-3 fs-4"></i>
                        <div>
                            <h6 class="mb-1">
                                <a href="{{ path('app_customer_show', {'id': project.customer.id}) }}" class="text-decoration-none text-dark fw-bold">
                                    {{ project.customer.name }}
                                </a>
                            </h6>
                            <p class="mb-0 text-muted small">
                                {{ project.name }} - {{ project.deadline|date('d/m/Y') }}
                            </p>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <div class="text-center mt-3">
                <p class="text-muted mb-0">{{ 'dashboard.no_upcoming_deadlines'|trans }}</p>
            </div>
        {% endif %}
    </div>
</div>