{# templates/form/custom_errors.html.twig #}
{# Custom form theme that renders error messages with raw HTML (for links in error messages) #}

{% use "bootstrap_5_layout.html.twig" %}

{# Override form errors to allow HTML rendering #}
{% block form_errors %}
    {% if errors|length > 0 %}
        {% for error in errors %}
            <div class="invalid-feedback d-block">{{ error.message|raw }}</div>
        {% endfor %}
    {% endif %}
{% endblock form_errors %}
