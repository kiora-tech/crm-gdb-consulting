{% extends 'base.html.twig' %}

{% block title %}
    {{ "project.new"|trans }}
{% endblock %}

{% block body %}
    <div class="pagetitle d-flex justify-content-between align-items-center">
        <h1>{{ "project.new"|trans }}</h1>
        <twig:Button
                link="{{ path('app_project_index') }}"
                theme="secondary"
                icon="arrow-left"
        />
    </div>

    <section class="section">
        <div class="card p-4">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.status) }}
                    {{ form_row(form.startDate) }}
                    {{ form_row(form.deadline) }}
                    {{ form_row(form.budget) }}
                    {{ form_row(form.customer) }}
                    <button type="submit" class="btn btn-primary mt-3">{{ "button.save"|trans }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}