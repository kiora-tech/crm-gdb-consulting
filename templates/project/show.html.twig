{% extends 'base.html.twig' %}

{% block title %}Project Details{% endblock %}

{% block body %}
<div class="pagetitle d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Project Details</h1>
    <div>
        <a href="{{ path('app_project_index') }}" class="btn btn-secondary me-2">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
        <a href="{{ path('app_project_edit', { id: project.id }) }}" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Project Information</h5>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Project Name:</strong>
            </div>
            <div class="col-md-8">
                {{ project.name }}
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Status:</strong>
            </div>
            <div class="col-md-8">
                <span class="badge 
                    {% if project.status == 'in_progress' %} bg-warning text-dark
                    {% elseif project.status == 'completed' %} bg-success
                    {% elseif project.status == 'on_hold' %} bg-secondary
                    {% else %} bg-info {% endif %}">
                    {{ project.status|capitalize }}
                </span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Start Date:</strong>
            </div>
            <div class="col-md-8">
                {{ project.startDate ? project.startDate|date('Y-m-d') : 'N/A' }}
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Deadline:</strong>
            </div>
            <div class="col-md-8">
                {{ project.deadline ? project.deadline|date('Y-m-d') : 'N/A' }}
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Budget:</strong>
            </div>
            <div class="col-md-8">
                {{ project.budget ? '$' ~ project.budget|number_format(2, '.', ',') : 'N/A' }}
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Customer:</strong>
            </div>
            <div class="col-md-8">
                {{ project.customer ? project.customer.name : 'N/A' }}
            </div>
        </div>
    </div>
</div>
{% endblock %}