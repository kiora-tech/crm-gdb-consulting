{% extends 'base.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
<div class="pagetitle d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Projects</h1>
    <a href="{{ path('app_project_new') }}" class="btn btn-primary">
        <i class="bi bi-plus"></i> Add Project
    </a>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Filter Projects</h5>
    </div>
    <div class="card-body">
        {{ form_start(form, { 'attr': { 'class': 'filter-form' } }) }}
        <div class="row g-3">
            <div class="col-md-3">{{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Project Name'}}) }}</div>
            <div class="col-md-3">{{ form_row(form.status, {'attr': {'class': 'form-control'}}) }}</div>
            <div class="col-md-3">{{ form_row(form.startDate, {'attr': {'class': 'form-control'}}) }}</div>
            <div class="col-md-3">{{ form_row(form.deadline, {'attr': {'class': 'form-control'}}) }}</div>
        </div>
        <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="btn btn-primary me-2"><i class="bi bi-search"></i> Search</button>
            <a href="{{ path('app_project_index') }}" class="btn btn-secondary"><i class="bi bi-arrow-clockwise"></i> Reset</a>
        </div>
        {{ form_end(form) }}
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Project List</h5>
    </div>
    <div class="card-body">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-primary">
                <tr>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Start Date</th>
                    <th>Deadline</th>
                    <th>Budget</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for project in projects %}
                    <tr>
                        <td>{{ project.name }}</td>
                        <td>
                            <span class="badge 
                                {% if project.status == 'in_progress' %} bg-warning text-dark
                                {% elseif project.status == 'completed' %} bg-success
                                {% elseif project.status == 'on_hold' %} bg-secondary
                                {% else %} bg-info {% endif %}">
                                {{ project.status|capitalize }}
                            </span>
                        </td>
                        <td>{{ project.startDate ? project.startDate|date('Y-m-d') : '' }}</td>
                        <td>{{ project.deadline ? project.deadline|date('Y-m-d') : '' }}</td>
                        <td>${{ project.budget|number_format(2, '.', ',') }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_project_show', {id: project.id}) }}" class="btn btn-sm btn-info">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a href="{{ path('app_project_edit', {id: project.id}) }}" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <form action="{{ path('app_project_delete', {id: project.id}) }}" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this project?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">No projects found.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}