<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
			{% endblock %}
			- GDB consulting
		</title>
		
		{# PWA and Mobile Meta Tags #}
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
		<meta name="theme-color" content="#0d6efd">
		<meta name="msapplication-TileColor" content="#0d6efd">
		<meta name="msapplication-navbutton-color" content="#0d6efd">
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
		<meta name="mobile-web-app-capable" content="yes">
		<meta name="apple-mobile-web-app-capable" content="yes">
		<meta name="apple-mobile-web-app-title" content="CRM-GDB">
		<meta name="application-name" content="CRM-GDB">
		
		{# PWA Manifest #}
		<link rel="manifest" href="/manifest.json">
		
		{# Icons and Favicon #}
		<link rel="icon" type="image/png" href="{{ asset('img/logo.ico') }}">
		<link rel="apple-touch-icon" href="/icons/apple-touch-icon-180x180.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/icons/pwa-64x64.png">
		<link rel="icon" type="image/png" sizes="192x192" href="/icons/pwa-192x192.png">
		
		{# SEO and Social Media Meta #}
		<meta name="description" content="{% block meta_description %}Système de gestion de la relation client pour GDB Consulting - Secteur de l'énergie avec capacités hors ligne{% endblock %}">
		<meta name="keywords" content="CRM, GDB Consulting, Énergie, Gestion client">
		<meta name="author" content="GDB Consulting">
		
		{# Open Graph / Facebook #}
		<meta property="og:type" content="website">
		<meta property="og:title" content="{% block og_title %}{{ block('title') }} - GDB consulting{% endblock %}">
		<meta property="og:description" content="{{ block('meta_description') }}">
		<meta property="og:image" content="/icons/pwa-512x512.png">
		<meta property="og:url" content="{{ app.request.uri }}">
		<meta property="og:site_name" content="CRM-GDB Consulting">
		
		{# Twitter Card #}
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content="{{ block('og_title') }}">
		<meta name="twitter:description" content="{{ block('meta_description') }}">
		<meta name="twitter:image" content="/icons/pwa-512x512.png">

		{% block stylesheets %}{% endblock %}

		{% block javascripts %}{% endblock %}

		{% block importmap %}
			{{ importmap('app') }}
		{% endblock %}
	</head>
	<body>
		{% block simple_body %}
			{% block header %}
				<header class="header fixed-top d-flex align-items-center" id="menu-overlay">
					<div class="d-flex align-items-center justify-content-between">
						<a href="/" class="logo d-flex align-items-center">
							<img src="{{ asset('img/logo.svg') }}" alt="GDB consulting" class="logo-img">
						</a>
						{% block inner_header %}{% endblock %}
					</div>
					<aside>
						<div class="search-bar">
							<twig:ClientSearch />
						</div>
					</aside>
					{% if is_granted('ROLE_USER') %}
						<nav class="header-nav ms-auto">
							<ul class="d-flex align-items-center">
								<li class="nav-item d-block d-lg-none">
									<div class="nav-link nav-icon search-bar-toggle">
										<i class="bi bi-search"></i>
									</div>
								</li>

								<li class="nav-item dropdown pe-3">
									<a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
										{% if app.user.profilePicture is not null %}
											<img src="{{ asset('uploads/user_profile/' ~ app.user.profilePicture) }}" alt="" class="rounded-circle">
										{% else %}
											<img src="{{ asset('img/default_user.png') }}" alt="" class="rounded-circle">
										{% endif %}
										<span class="d-none d-md-block dropdown-toggle ps-2">{{ app.user.name ~ ' ' ~ app.user.lastName }}</span>
									</a>
									<ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
										<li class="dropdown-header">
											<h6>{{ app.user.name ~ ' ' ~ app.user.lastName }}</h6>
											<span>{{ app.user.company.name }}</span>
										</li>
										<li>
											<hr class="dropdown-divider">
										</li>
										<li>
											<a class="dropdown-item d-flex align-items-center" href="{{ path('app_user_profile') }}">
												<i class="bi bi-person"></i>
												<span>{{ 'header.profile.my_profile'|trans }}</span>
											</a>
										</li>
										<li>
											<hr class="dropdown-divider">
										</li>
										<li>
											<a class="dropdown-item d-flex align-items-center" href="{{ path('app_logout') }}">
												<i class="bi bi-box-arrow-right"></i>
												<span>{{ 'header.profile.sign_out'|trans }}</span>
											</a>
										</li>
									</ul>
								</li>
							</ul>
						</nav>
					{% endif %}
				</header>
			{% endblock %}
			<main id="main" class="main">
				<turbo-frame id="body" data-turbo-action="advance">
					<div class="container">
						{% for label, messages in app.flashes %}
							<div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
								{% for message in messages %}
									<p>{{ message|raw }}</p>
								{% endfor %}
								<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
							</div>
						{% endfor %}
					</div>
					<div class="main">
						{% block body %}{% endblock %}
					</div>
				</turbo-frame>
			</main>
		{% endblock %}
	</body>
</html>
