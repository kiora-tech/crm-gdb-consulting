{# templates/components/Actions.html.twig #}
<div {{ attributes.defaults({class: 'd-flex gap-2 justify-content-end'}) }}>
    {% if this.isActionAvailable('show') %}
        <twig:Button
                link="{{ path(showRoute, {'id': entity.id}) }}"
                theme="primary"
                size="sm"
                :outline="true"
                icon="eye"
                :attributes="{'title': 'action.show'|trans}"
        />
    {% endif %}

    {% if this.isActionAvailable('edit') %}
        <twig:Button
                link="{{ path(editRoute, {'id': entity.id}) }}"
                theme="primary"
                size="sm"
                :outline="true"
                icon="pencil-square"
                :attributes="{'title': 'action.edit'|trans}"
        />
    {% endif %}

    {% if this.isActionAvailable('delete') %}
        <form action="{{ path(deleteRoute, {'id': entity.id}) }}"
              method="post"
              class="d-inline"
              onsubmit="return confirm('{{ 'message.confirm_delete'|trans }}')">
            <input type="hidden" name="_token" value="{{ csrf_token(this.deleteToken) }}">
            <twig:Button
                    type="submit"
                    theme="danger"
                    size="sm"
                    :outline="true"
                    icon="trash"
                    :attributes="{'title': 'action.delete'|trans}"
            />
        </form>
    {% endif %}
</div>