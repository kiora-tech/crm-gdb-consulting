{# templates/components/Table.html.twig #}
<div class="card pt-4" {% if options.selectable %}data-controller="table-selection"{% endif %}>
    <div class="card-body">
        {% if options.selectable %}
            <div class="mb-3 d-flex justify-content-between align-items-center">
                <div>
                    <span class="text-muted">
                        <span data-table-selection-target="counter">0</span> contact(s) sélectionné(s)
                    </span>
                </div>
                <button type="button"
                        class="btn btn-primary"
                        data-action="click->table-selection#createEmailDraft"
                        data-table-selection-target="emailButton"
                        disabled>
                    <i class="bi bi-envelope"></i> {{ options.selectableLabel }}
                </button>
            </div>
        {% endif %}

        <div class="table-responsive">
            <table class="{{ options.tableClass }}">
                <thead>
                <tr class="{{ options.theadClass }}">
                    {% if options.selectable %}
                        <th scope="col" class="text-center" style="width: 50px;">
                            <input type="checkbox"
                                   class="form-check-input"
                                   data-action="change->table-selection#toggleAll"
                                   data-table-selection-target="selectAll">
                        </th>
                    {% endif %}

                    {% for column in columns %}
                        <th scope="col" class="text-center">
                            {% if column.sortable|default(false) and options.sortable %}
                                <a href="{{ path(app.request.attributes.get('_route'),
                                    app.request.query.all|merge({
                                        'sort': this.getSortableField(column),
                                        'order': this.getOrder(this.getSortableField(column))
                                    })) }}"
                                   class="text-decoration-none text-dark">
                                    {{ column.label|trans }}
                                    <i class="bi {{ this.getSortIcon(this.getSortableField(column)) }} ms-1"></i>
                                </a>
                            {% else %}
                                {{ column.label|trans }}
                            {% endif %}
                        </th>
                    {% endfor %}

                    {% if options.showActions %}
                        <th scope="col" class="text-center">{{ 'table.actions'|trans }}</th>
                    {% endif %}
                </tr>
                </thead>
                <tbody>
                {% if paginator|length > 0 %}
                    {% for entity in paginator %}
                        <tr>
                            {% if options.selectable %}
                                <td class="text-center">
                                    {% set emailValue = attribute(entity, options.selectableField) %}
                                    <input type="checkbox"
                                           class="form-check-input"
                                           data-table-selection-target="checkbox"
                                           data-action="change->table-selection#updateSelection"
                                           data-email="{{ emailValue }}"
                                           value="{{ emailValue }}">
                                </td>
                            {% endif %}

                            {% for column in columns %}
                                <td class="text-center">
                                    {% if block('column_' ~ column.field|replace({'.': '_'})) is defined %}
                                        {{ block('column_' ~ column.field|replace({'.': '_'})) }}
                                    {% else %}
                                        {# Gestion des propriétés imbriquées (e.g., 'user.email') #}
                                        {% set value = entity %}
                                        {% for key in column.field|split('.') %}
                                            {% set value = attribute(value, key) %}
                                        {% endfor %}
                                        {{ value }}
                                    {% endif %}
                                </td>
                            {% endfor %}

                            {% if options.showActions %}
                                <td class="text-end">
                                    <div class="d-flex justify-content-end gap-1">
                                        <twig:Actions
                                                :entity="entity"
                                                :showRoute="options.routes.show"
                                                :editRoute="options.routes.edit"
                                                :deleteRoute="options.routes.delete"
                                                :canShow="options.actions.show"
                                                :canEdit="options.actions.edit"
                                                :canDelete="options.actions.delete"
                                                :actionAttributes="options.actionAttributes"
                                        />
                                        
                                        {% if options.actions.custom|default(false) %}
                                            {% if block('custom_actions') is defined %}
                                                {{ block('custom_actions') }}
                                            {% endif %}
                                        {% endif %}
                                    </div>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="{{ columns|length + (options.showActions ? 1 : 0) + (options.selectable ? 1 : 0) }}" class="text-center">
                            {{ 'table.no_data'|trans }}
                        </td>
                    </tr>
                {% endif %}
                </tbody>
            </table>

            <div class="d-flex justify-content-center">
                {{ knp_pagination_render(paginator) }}
            </div>
        </div>
    </div>
</div>