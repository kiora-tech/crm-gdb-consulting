                    <h3>{{ 'customer.prospects'|trans }}</h3>
                    <div data-controller="form-collection" data-form-collection-index-value="{{ form.prospects|length }}" data-form-collection-template-value="{{ form_widget(form.prospects.vars.prototype)|e('html_attr') }}">
                        <div data-form-collection-target="container">
                            {% for prospectForm in form.prospects %}
                                <div class="form-item mb-3 border p-3 rounded">
                                    {{ form_row(prospectForm, {'attr': {'class': 'mb-3'}}) }}
