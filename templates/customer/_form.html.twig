            <!-- Gestion des Energies et Prospects en deux colonnes -->
            <div class="row">
                <div class="col-md-6 mb-4">
                    <h3>{{ 'customer.energies'|trans }}</h3>
                    <div data-controller="form-collection" data-form-collection-index-value="{{ form.energies|length }}" data-form-collection-template-value="{{ form_widget(form.energies.vars.prototype)|e('html_attr') }}">
                        <div data-form-collection-target="container">
