<!-- Début du formulaire -->

<!-- Erreurs globales -->
<div class="row mb-4">
    <div class="col-12">
        {{ form_errors(form) }}
    </div>
</div>

<div class="row">
    <!-- Informations Société -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">{{ 'customer.company_information'|trans }}</h5>
            </div>
            <div class="card-body">
                <!-- Nom -->
                <div class="mb-3">
                    {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'customer.placeholder.name'}}) }}
                    {{ form_errors(form.name) }}
                </div>

                <!-- SIRET -->
                <div class="mb-3">
                    {{ form_label(form.siret, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.siret, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.siret) }}
                </div>

                <!-- Groupe -->
                <div class="mb-3">
                    {{ form_label(form.companyGroup, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.companyGroup, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.companyGroup) }}
                </div>

                <!-- Forme juridique -->
                <div class="mb-3">
                    {{ form_label(form.legalForm, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.legalForm, {'attr': {'class': 'form-control', 'placeholder': 'SARL, SAS, SA...'}}) }}
                    {{ form_errors(form.legalForm) }}
                </div>

                <!-- Origine du Lead -->
                <div class="mb-3">
                    {{ form_label(form.leadOrigin, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.leadOrigin, {'attr': {'class': 'form-control', 'placeholder': 'customer.placeholder.lead_origin'}}) }}
                    {{ form_errors(form.leadOrigin) }}
                </div>

                <!-- Origin -->
                <div class="mb-3">
                    {{ form_label(form.origin, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.origin, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.origin) }}
                </div>

                {% if form.user is defined %}
                    <div class="mb-3">
                        {{ form_label(form.user, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.user) }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Informations Commerciales -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">{{ 'customer.commercial_information'|trans }}</h5>
            </div>
            <div class="card-body">
                <!-- Status -->
                <div class="mb-3">
                    {{ form_label(form.status, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.status) }}
                </div>

                <!-- Canal Signature -->
                <div class="mb-3">
                    {{ form_label(form.canalSignature, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.canalSignature, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.canalSignature) }}
                </div>

                <!-- Action -->
                <div class="mb-3">
                    {{ form_label(form.action, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.action, {'attr': {'class': 'form-control', 'placeholder': 'customer.placeholder.action'}}) }}
                    {{ form_errors(form.action) }}
                </div>

                <!-- Valeur -->
                <div class="mb-3">
                    {{ form_label(form.worth, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.worth, {'attr': {'class': 'form-control', 'placeholder': 'customer.placeholder.worth'}}) }}
                    {{ form_errors(form.worth) }}
                </div>

                <!-- Commission -->
                <div class="mb-3">
                    {{ form_label(form.commision, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.commision, {'attr': {'class': 'form-control', 'placeholder': 'customer.placeholder.commission'}}) }}
                    {{ form_errors(form.commision) }}
                </div>

                <!-- Marge -->
                <div class="mb-3">
                    {{ form_label(form.margin, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.margin, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.margin) }}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Section Adresse -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">{{ 'customer.address'|trans }}</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Numéro -->
                    <div class="col-md-2">
                        <div class="mb-3">
                            {{ form_label(form.addressNumber, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.addressNumber, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.addressNumber) }}
                        </div>
                    </div>
                    
                    <!-- Rue -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.addressStreet, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.addressStreet, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.addressStreet) }}
                        </div>
                    </div>
                    
                    <!-- Code postal -->
                    <div class="col-md-2">
                        <div class="mb-3">
                            {{ form_label(form.addressPostalCode, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.addressPostalCode, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.addressPostalCode) }}
                        </div>
                    </div>
                    
                    <!-- Ville -->
                    <div class="col-md-2">
                        <div class="mb-3">
                            {{ form_label(form.addressCity, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.addressCity, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.addressCity) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>