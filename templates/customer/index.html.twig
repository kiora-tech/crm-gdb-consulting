{% extends 'base.html.twig' %}

{% block title %}
    {{ "customer.list"|trans }}
{% endblock %}

{% block body %}
    <div class="pagetitle d-flex justify-content-between align-items-center">
        <h1>{{ "customer.list"|trans }}</h1>
        <a href="{{ path('app_customer_new') }}" class="btn btn-primary">
            <i class="bi bi-plus"></i> {{ "button.add_customer"|trans }}
        </a>
    </div>

    <!-- Import Error Files Section -->
    {% set errorFiles = importErrorFiles is defined ? importErrorFiles : [] %}
    {% if errorFiles|length > 0 %}
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-warning text-white">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> {{ "customer.import_errors"|trans }}</h5>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>{{ "file.name"|trans }}</th>
                            <th class="text-end">{{ "table.actions"|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for file in errorFiles %}
                            <tr>
                                <td>{{ file }}</td>
                                <td class="text-end">
                                    <a href="{{ path('app_customer_import_error_file', {filename: file}) }}" class="btn btn-sm btn-primary" data-turbo="false">
                                        <i class="bi bi-download"></i> {{ "button.download"|trans }}
                                    </a>
                                    <form action="{{ path('app_customer_delete_import_error_file') }}" method="post" class="d-inline">
                                        <input type="hidden" name="filename" value="{{ file }}">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('{{ "confirm.delete_file"|trans }}');">
                                            <i class="bi bi-trash"></i> {{ "button.delete"|trans }}
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}

    <!-- Filters Section -->
    {% include 'customer/_filter.html.twig' %}

    <!-- Customer List Section -->
    <section class="section mt-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-people-fill"></i> {{ "customer.list"|trans }}</h5>
            </div>
            <div class="card-body">
                <twig:Table
                    :paginator="customers"
                    :columns="[
                        {field: 'name', label: 'customer.name', sortable: true, sortAlias: 'c.name'},
                        {field: 'contacts', label: 'contact.name', sortable: true, sortAlias: 'co.firstName'},
                    ]"
                    :options="{
                        routes: {
                            show: 'app_customer_show',
                            edit: 'app_customer_edit',
                            delete: false
                        },
                        tableClass: 'table table-hover',
                        theadClass: 'table-light',
                        showActions: true,
                        actions: {
                            show: true,
                            edit: true,
                            delete: false
                        }
                    }"
                >
                    {% block column_contacts %}
                        {% for contact in entity.contacts %}
                            {{ contact }}<br>
                        {% endfor %}
                    {% endblock %}
                </twig:Table>
            </div>
        </div>
    </section>
{% endblock %}
